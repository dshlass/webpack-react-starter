# editorconfig.org

root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

# Indentation override for all JS under app directory
[src/**.js]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Matches .json
[*.json]
indent_style = space
indent_size = 2

# Matches .md
[*.md]
trim_trailing_whitespace = false
